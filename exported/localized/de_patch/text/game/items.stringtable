    <Entry>
      <ID>4097</ID>
      <DefaultText>Triumph von Assila Wellenskipper</DefaultText>
      <FemaleText />
    </Entry>
    <Entry>
      <ID>4098</ID>
      <DefaultText>Der persönliche Triumph von Assila Wellenskipper, Kapitän der Flussdrache.</DefaultText>
